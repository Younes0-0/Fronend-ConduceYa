---
import Layout from '@layouts/Layout.astro';

// Simulación de datos de instructores (posteriormente se conectará con la API)
const instructores = [
  {
    id: 1,
    nombre: "Carlos Rodríguez",
    especialidad: "Coche",
    experiencia: "10 años",
    imagen: "/images/instructor1.jpg",
    disponibilidad: true
  },
  {
    id: 2,
    nombre: "Ana García",
    especialidad: "Moto",
    experiencia: "8 años",
    imagen: "/images/instructor2.jpg",
    disponibilidad: true
  },
  {
    id: 3,
    nombre: "Miguel Sánchez",
    especialidad: "Coche y Moto",
    experiencia: "15 años",
    imagen: "/images/instructor3.jpg",
    disponibilidad: true
  }
];

// Simulación de horarios disponibles
const horarios = [
  "09:00", "10:00", "11:00", "12:00",
  "16:00", "17:00", "18:00", "19:00"
];
---

<Layout title="Reserva tu Clase">
  <div class="reservas-container">
    <h1>Reserva tu Clase Práctica</h1>
    <p class="descripcion">Selecciona tu instructor, fecha y hora preferida</p>

    <form class="formulario-reserva">
      <div class="seccion-form">
        <h2>1. Selecciona el Tipo de Clase</h2>
        <div class="opciones-tipo">
          <label class="opcion">
            <input type="radio" name="tipo" value="coche" checked>
            <span>Coche</span>
          </label>
          <label class="opcion">
            <input type="radio" name="tipo" value="moto">
            <span>Moto</span>
          </label>
        </div>
      </div>

      <div class="seccion-form">
        <h2>2. Elige tu Instructor</h2>
        <div class="instructores-grid">
          {instructores.map(instructor => (
            <label class="instructor-card">
              <input type="radio" name="instructor" value={instructor.id}>
              <div class="instructor-info">
                <img src={instructor.imagen} alt={instructor.nombre} />
                <h3>{instructor.nombre}</h3>
                <p>{instructor.especialidad}</p>
                <span class="experiencia">{instructor.experiencia}</span>
              </div>
            </label>
          ))}
        </div>
      </div>

      <div class="seccion-form">
        <h2>3. Selecciona Fecha y Hora</h2>
        <div class="fecha-hora">
          <div class="campo">
            <label for="fecha">Fecha:</label>
            <input type="date" id="fecha" name="fecha" required>
          </div>
          <div class="campo">
            <label for="hora">Hora:</label>
            <select id="hora" name="hora" required>
              {horarios.map(hora => (
                <option value={hora}>{hora}</option>
              ))}
            </select>
          </div>
        </div>
      </div>

      <button type="submit" class="btn-reservar">Confirmar Reserva</button>
    </form>
  </div>
</Layout>

<style>
  .reservas-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .descripcion {
    text-align: center;
    color: #6b7280;
    margin-bottom: 3rem;
  }

  .formulario-reserva {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .seccion-form {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .seccion-form:last-child {
    border-bottom: none;
  }

  .seccion-form h2 {
    color: #1f2937;
    margin-bottom: 1.5rem;
  }

  .opciones-tipo {
    display: flex;
    gap: 2rem;
  }

  .opcion {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
  }

  .instructores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .instructor-card {
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .instructor-card:hover {
    border-color: var(--primary-color);
  }

  .instructor-card input[type="radio"] {
    display: none;
  }

  .instructor-card input[type="radio"]:checked + .instructor-info {
    border-color: var(--primary-color);
  }

  .instructor-info {
    text-align: center;
  }

  .instructor-info img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 1rem;
    object-fit: cover;
  }

  .instructor-info h3 {
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .instructor-info p {
    color: #6b7280;
    margin-bottom: 0.5rem;
  }

  .experiencia {
    display: inline-block;
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  .fecha-hora {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .campo {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .campo label {
    color: #1f2937;
    font-weight: 500;
  }

  .campo input,
  .campo select {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
  }

  .btn-reservar {
    background-color: var(--primary-color);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background-color 0.2s;
    width: 100%;
    margin-top: 2rem;
  }

  .btn-reservar:hover {
    background-color: var(--secondary-color);
  }

  @media (max-width: 768px) {
    .fecha-hora {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>