    }
    /* Estilo base para todos los iconos */
    a[aria-label] svg {
        transition: transform 0.3s ease, fill 0.3s ease;
        fill: #fff8f8; /* Color inicial de los iconos */
    }

    a[aria-label]:hover svg {
        transform: scale(1.3); /* Efecto de escala */
    }

    /* Colores específicos para cada red social */
    a[aria-label="Facebook"]:hover svg {
        fill: #0866ff; /* Azul de Facebook */
    }

    a[aria-label="Twitter"]:hover svg {
        fill: #03a9f4; /* Azul de Twitter */
    }

    a[aria-label="Instagram"]:hover svg {
        fill: #fc136b; /* Magenta de Instagram */
    }

    .footer-links {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
    }
    .footer-links a {
        color: #fff8f8;
        
        transition: color 0.3s ease;
    }
    .footer-links a:hover {
        color: #A4C6F9;
        fill: #fc136b;
    }

    /* Animación para deslizar un elemento desde abajo */
    @keyframes slideInFromBottom {
        0% {
            transform: translateY(100%); /* Inicia fuera de la pantalla, en la parte inferior */
            opacity: 0; /* Comienza transparente */
        }
        100% {
            transform: translateY(0); /* Se coloca en su posición original */
            opacity: 1; /* Se vuelve completamente visible */
        }
    }

    /* Aplicación de la animación slideInFromBottom al footer */
    footer {
        animation: slideInFromBottom 0.5s ease-out; /* Desliza hacia arriba con una desaceleración suave */
    }

    /* Efecto de escala y rotación en iconos SVG al pasar el ratón por encima del enlace */
    a[aria-label]:hover svg {
        transform: scale(1.3) rotate(360deg); /* Aumenta el tamaño un 30% y gira 360 grados */
        transition: transform 0.5s ease-in-out; /* Transición suave de medio segundo */
    }
</style>