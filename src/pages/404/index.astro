---
import Layout from "@layouts/Layout.astro";
import Menu from "@components/layout/Menu.astro";
import Footer from "@components/layout/Footer.astro"; 
---

<Layout title="404, no lo he encontrado">
  <Menu imageSrc="./img/logo-letras.png" imageAlt="logo de la empresa" />
  <main class="d-flex justify-content-center align-items-center text-center">
    <div class="error-container">
        <h1 class="error-title">Ups... Página no encontrada</h1>
        <p class="error-text">
            Parece que esta página no existe. Puedes volver al inicio o explorar otro contenido.
        </p>
        <img
            src="https://media.giphy.com/media/6uGhT1O4sxpi8/giphy.gif"
            alt="Error 404"
            class="error-img mt-3"
        />
        <div class="mt-4">
            <a href="/" class="btn-custom">Volver al inicio</a>
        </div>
    </div>
  </main>
  <Footer />
</Layout>
<style is:global>
  html, body {
      height: 100%;
      margin: 0;
      background-color: #f8f9fa; /* Fondo gris claro */
      color: #343a40; /* Texto en gris oscuro */
  }
  main {
      min-height: 75vh;
  }
  .error-container {
      max-width: 720px;
      padding: 20px;
      background: white;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  .error-title {
      font-size: 2rem;
      font-weight: bold;
      color: #495057; /* Gris oscuro */
  }
  .error-text {
      font-size: 1.1rem;
      color: #6c757d; /* Gris más suave */
  }
  .error-img {
      width: 100%; /* Ajuste automático */
      max-width: 720px; /* Máximo en pantallas grandes */
      min-width: 200px; /* Mínimo en pantallas pequeñas */
      border-radius: 8px;
      opacity: 0.85;
      transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
  }
  .error-img:hover {
      opacity: 1;
      transform: scale(1.05); /* Efecto hover sutil */
  }
  .btn-custom {
      background-color: #007bff; /* Azul Bootstrap */
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      transition: background 0.3s ease-in-out;
  }
  .btn-custom:hover {
      background-color: #0056b3;
  }
</style>