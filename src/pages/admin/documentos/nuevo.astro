---
import Layout from '@layouts/Layout.astro';
import Menu from '@components/layout/Menu.astro';
import Footer from '@components/layout/Footer.astro';

const usuarios = [
  { id: 1, nombre: "Laura Sánchez" },
  { id: 2, nombre: "Juan López" },
  { id: 3, nombre: "Lucía Torres" }
];
const tipos = [
  "DNI",
  "Permiso de Conducir",
  "Justificante de Pago",
  "Otros"
];
const estados = ["Pendiente", "Verificado", "Rechazado"];
---

<Layout title="Nuevo Documento">
  <Menu imageSrc="/img/logo-letras.png" imageAlt="logo de la empresa"/>
  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-7">
        <div class="card shadow rounded-4">
          <div class="card-body">
            <h1 class="mb-4 text-primary fw-bold">Nuevo Documento</h1>
            <form method="POST" action="/admin/documentos/crear" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="tipo" class="form-label">Tipo de documento</label>
                <select required class="form-select" id="tipo" name="tipo">
                  <option value="">Selecciona el tipo</option>
                  {tipos.map(tipo => (
                    <option value={tipo}>{tipo}</option>
                  ))}
                </select>
              </div>
              <div class="mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                <select required class="form-select" id="usuario" name="usuario">
                  <option value="">Selecciona el usuario</option>
                  {usuarios.map(usuario => (
                    <option value={usuario.id}>{usuario.nombre}</option>
                  ))}
                </select>
              </div>
              <div class="mb-3">
                <label for="fecha_subida" class="form-label">Fecha de subida</label>
                <input required type="date" class="form-control" id="fecha_subida" name="fecha_subida" />
              </div>
              <div class="mb-3">
                <label for="archivo" class="form-label">Archivo</label>
                <input required type="file" class="form-control" id="archivo" name="archivo" />
              </div>
              <div class="mb-3">
                <label for="estado" class="form-label">Estado</label>
                <select required class="form-select" id="estado" name="estado">
                  <option value="">Selecciona el estado</option>
                  {estados.map(estado => (
                    <option value={estado}>{estado}</option>
                  ))}
                </select>
              </div>
              <div class="d-flex justify-content-end gap-2">
                <a href="/admin/documentos" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar Documento</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer/>
</Layout>
