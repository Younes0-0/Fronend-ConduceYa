---
import Layout from '@layouts/Layout.astro';
import Menu from '@components/layout/Menu.astro';
import Footer from '@components/layout/Footer.astro';

const existingToken = Astro.cookies.get('jwt_token')?.value;
if (!existingToken) {
  return Astro.redirect('/login');
}


const roles = ["alumno", "profesor", "admin"];
const estados = ["Activo", "Pendiente", "Inactivo"];
---

<Layout title="Nuevo Usuario">
  <Menu imageSrc="/img/logo-letras.png" imageAlt="logo de la empresa"/>
  <main class="container py-4">
    <div class="row justify-content-center">
      <div class="col-lg-7">
        <div class="card shadow rounded-4">
          <div class="card-body">
            <h1 class="mb-4 text-primary fw-bold">Nuevo Usuario</h1>
            <form method="POST" action="/admin/usuarios/crear">
              <div class="mb-3">
                <label for="nombre" class="form-label">Nombre completo</label>
                <input required type="text" class="form-control" id="nombre" name="nombre" placeholder="Introduce el nombre" />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input required type="email" class="form-control" id="email" name="email" placeholder="ejemplo@correo.com" />
              </div>
              <div class="mb-3">
                <label for="telefono" class="form-label">Tel√©fono</label>
                <input required type="tel" class="form-control" id="telefono" name="telefono" placeholder="600112233" />
              </div>
              <div class="mb-3">
                <label for="fecha_registro" class="form-label">Fecha de registro</label>
                <input required type="date" class="form-control" id="fecha_registro" name="fecha_registro" />
              </div>
              <div class="mb-3">
                <label for="role" class="form-label">Rol</label>
                <select required class="form-select" id="role" name="role">
                  <option value="">Selecciona el rol</option>
                  {roles.map(role => (
                    <option value={role}>{role.charAt(0).toUpperCase() + role.slice(1)}</option>
                  ))}
                </select>
              </div>
              <div class="mb-3">
                <label for="estado" class="form-label">Estado</label>
                <select required class="form-select" id="estado" name="estado">
                  <option value="">Selecciona el estado</option>
                  {estados.map(estado => (
                    <option value={estado}>{estado}</option>
                  ))}
                </select>
              </div>
              <div class="d-flex justify-content-end gap-2">
                <a href="/admin/usuarios" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar Usuario</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer/>
</Layout>
