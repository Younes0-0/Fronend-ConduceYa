---
import Layout from '@layouts/Layout.astro';
import Menu from '@components/layout/Menu.astro';
import Footer from '@components/layout/Footer.astro';

// Registro (POST desde formulario)
if (Astro.request.method === "POST") {
  try {
    const form = await Astro.request.formData();

    const first_name = form.get("first-name") || "";
    const last_name = form.get("last-name") || "";
    const email = form.get("email") || "";
    const password = form.get("password") || "";
    const confirmPassword = form.get("confirm-password") || "";
    const phone = form.get("phone") || "";
    const address = form.get("address") || "";
    const city = form.get("city") || "";
    const postal_code = form.get("zip") || "";
    const genero_form = form.get("gender") || "";

    if (password !== confirmPassword) {
      throw new Error("Las contraseñas no coinciden");
    }

    const genero = genero_form === "male" ? "M"
                : genero_form === "female" ? "F"
                : genero_form === "other" ? "O"
                : null;

    const body = {
      usuario: {
        username: email,
        password,
        first_name,
        last_name,
        email
      },
      phone,
      address,
      city,
      postal_code,
      genero
    };

    const response = await fetch("https://backend-conduceya.onrender.com/api/v1/alumnos/", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(body)
    });

    const data = await response.json();
    console.log("Registro exitoso:", data);
    
    if (!response.ok) {
      console.error("Error en registro:", data);
      throw new Error("Error en el registro. " + JSON.stringify(data));
    }

    // Redirigir al login o al panel (tú decides)

  } catch (error) {
    if (error instanceof Error) {
      console.error("Error:", error.message);
    }
  }
}
---

<Layout>
    <Menu imageSrc="/img/logo-letras.png" imageAlt="logo de la empresa" />
    <main>
         
        <!-- Contenedor de Registro -->
        <section class="form-container" id="register-form-container">
            <h2>Registrarse</h2>
            <form method="POST" id="register-form">
                <div class="row g-2">
                    <div class="col">
                        <label for="first-name" class="form-label">Nombre</label>
                        <input type="text" id="first-name" name="first-name" class="form-control" required>
                    </div>
                    <div class="col">
                        <label for="last-name" class="form-label">Apellido</label>
                        <input type="text" id="last-name" name="last-name" class="form-control" required>
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                    <div class="col">
                        <label for="phone" class="form-label">Teléfono</label>
                        <input type="tel" id="phone" name="phone" class="form-control" required>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="address" class="form-label">Dirección</label>
                    <input type="text" id="address" name="address" class="form-control" required>
                </div>

                <div class="row g-2">
                    <div class="col-md-6">
                        <label for="city" class="form-label">Ciudad</label>
                        <input type="text" id="city" name="city" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label for="zip" class="form-label">Código Postal</label>
                        <input type="text" id="zip" name="zip" class="form-control" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="gender" class="form-label">Género</label>
                    <select id="gender" name="gender" class="form-select" required>
                        <option value="" disabled selected>Selecciona una opción</option>
                        <option value="male">Masculino</option>
                        <option value="female">Femenino</option>
                        <option value="other">Otro</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Confirmar Contraseña</label>
                    <input type="password" id="confirm-password" name="confirm-password" class="form-control" required>
                </div>
                
                <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                
                <div class="form-footer text-center mt-3">
                    <a href="login.html" id="toggle-login-link">¿Ya tienes una cuenta? Inicia Sesión</a>
                </div>
                
                <div class="or-divider">
                    <span>O</span>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button class="btn btn-danger w-100 mx-1" type="button">Google</button>
                    <button class="btn btn-primary w-100 mx-1" type="button">Facebook</button>
                    <button class="btn btn-dark w-100 mx-1" type="button">Apple</button>
                </div>
            </form>
        </section>
    </main>
    <Footer />
</Layout>
