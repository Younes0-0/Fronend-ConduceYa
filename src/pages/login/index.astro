---
import Layout from '@layouts/Layout.astro';
import Menu from '@components/layout/Menu.astro';
import Footer from '@components/layout/Footer.astro';
import {getSession} from "auth-astro/server";


const session = await getSession(Astro.request);
if (session) {
  return Astro.redirect("/perfil");
}
const TOKEN = Astro.cookies.get('jwt_token')?.value || '';

if (TOKEN) {
  return Astro.redirect('/admin-dashboard'); // Redirige si ya hay token
}

// Login page
if (Astro.request.method === "POST") {
  try {
    const form = await Astro.request.formData();
    const username = form.get("username");
    const password = form.get("password");
    const response = await fetch("http://127.0.0.1:8000/api/token/", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ username, password }),
    });
    const data = await response.json();
    if (!response.ok) {
      throw new Error(data.detail || "Usuario o contraseña incorrectos.");
    }

    // Guarda el token en una cookie (NO HTTPOnly aquí, para ejemplo)
    console.log(data);
    
    Astro.cookies.set("jwt_token", data.access, {
      path: "/",
      httpOnly: false, // Si usas Astro SSR, mejor usar true y validar en backend
      secure: false
    });

    // Redirige tras login exitoso
    return Astro.redirect("/perfil"); // O a /admin/usuarios si es admin
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout>
    <Menu imageSrc="./img/logo-letras.png" imageAlt="logo de la empresa" />
    <main class="login-bg">
        <section class="form-container">
            <h2>Inicio de Sesión</h2>
            <form id="loginForm" method="POST" action="/login">
                <div class="mb-3">
                    <label for="username" class="form-label">Correo Electrónico</label>
                    <input type="text" id="username" name="username" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>

                <p id="error" class="text-center mt-3 text-danger"></p>
                <div class="form-footer text-center mt-3">
                    <a href="formulario.html" id="toggle-login-link">¿No tienes cuenta? Regístrate</a>
                </div>
                
                <div class="or-divider">
                    <span>O</span>
                </div>
                
            </form>
            <div class="d-flex justify-content-between">
                <a class="btn btn-danger w-100 mx-1" id="google">Google</a>
                <a class="btn btn-dark w-100 mx-1" id="github">GitHub</a>
                <!--
                    <button class="btn btn-primary w-100 mx-1" type="button">Facebook</button>
                --> 
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<script>
    const { signIn } = await import("auth-astro/client")
    document.querySelector("#google")?.addEventListener("click", () => signIn("google"));
    document.querySelector("#github")?.addEventListener("click", () => signIn("github"));
   
</script>

