        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 85vh;
        background: linear-gradient(120deg, #3498db, #8e44ad);
        background-attachment: fixed;
        padding: 20px;
    }
    .or-divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 20px 0;
    }
    .or-divider::before,
    .or-divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #ddd;
    }
    .or-divider span {
        padding: 0 10px;
        color: #666;
        font-size: 0.9em;
    }
    .form-container {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
        animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h2 {
        text-align: center;
        color: #333;
        font-size: 1.8rem;
        font-weight: bold;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        padding: 10px;
        border-radius: 6px;
